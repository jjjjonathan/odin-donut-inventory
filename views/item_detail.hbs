<div class="ui top attached block header">
  <div class="ui small circular right floated image">
    <img src="https://fomantic-ui.com/images/wireframe/image.png" />
  </div>
  <h2>
    {{title}}
  </h2>
  <div class="meta">
    Category:
    {{item.category.name}}
  </div>
</div>
<div class="ui attached segment">
  {{item.description}}
</div>
<div class="ui attached very padded segment">
  <div class="ui statistics">
    <div class="ui horizontal statistic">
      <div class="value">
        {{item.numberInStock}}
      </div>
      <div class="label">
        in stock
      </div>
    </div>
    <div class="ui horizontal statistic">
      <div class="value">
        {{item.formattedPrice}}
      </div>
    </div>
  </div>
</div>
<div class="ui two bottom attached buttons">
  <a href="{{item.url}}/update" class="ui primary basic button">
    Update Item
  </a>
  <a href="{{item.url}}/delete" class="ui negative basic button">
    Delete Item
  </a>
</div>