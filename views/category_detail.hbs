<div class="ui top attached block header">
  <div class="ui two column grid">
    <div class="column">
      <h2>
        {{title}}
      </h2>
    </div>
    <div class="column">
      <img
        class="ui small right floated rounded image"
        src={{category.imageUrl}}
      />
    </div>
  </div>
</div>
<div class="ui attached segment">
  {{category.description}}
</div>
<div class="ui two bottom attached buttons">
  <a href="{{category.url}}/update" class="ui primary basic button">
    Update Category
  </a>
  <a href="{{category.url}}/delete" class="ui negative basic button">
    Delete Category
  </a>
</div>
<div class="ui divided link items">
  {{#each items}}
    <a class="item" href={{this.url}}>
      <div class="ui tiny image">
        <img src={{this.imageUrl}} />
      </div>
      <div class="middle aligned content">
        <div class="header">
          {{this.name}}
        </div>
        <div class="description">
          {{this.description}}
        </div>
      </div>
    </a>
  {{/each}}
</div>